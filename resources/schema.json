{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Bildvergleich",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "images": {
      "title": "Bilder",
      "type": "array",
      "minItems": 2,
      "Q:options": {
        "expandable": {
          "itemLabelProperty": ["label"]
        }
      },
      "items": {
        "title": "Bild",
        "type": "object",
        "properties": {
          "file": {
            "type": "object",
            "Q:type": "files",
            "Q:options": {
              "maxFiles": 1,
              "acceptedFiles": "image/*",
              "fileProperties": {
                "url": "url",
                "key": "key",
                "width": "width",
                "height": "height",
                "size": "size"
              }
            }
          },
          "variants": {
            "title": "Varianten",
            "type": "array",
            "items": {
              "title": "Variante",
              "type": "object",
              "properties": {
                "minWidth": {
                  "title": "Mindestbreite in px f√ºr diese Variante",
                  "type": "number",
                  "default": 500,
                  "minimum": 0
                },
                "file": {
                  "title": "Bild",
                  "type": "object",
                  "Q:type": "files",
                  "Q:options": {
                    "maxFiles": 1,
                    "acceptedFiles": "image/*",
                    "fileProperties": {
                      "url": "url",
                      "key": "key",
                      "width": "width",
                      "height": "height",
                      "size": "size"
                    }
                  }
                }
              }
            },
            "Q:options": {
              "expandable": {
                "itemLabelProperty": ["minWidth"]
              },
              "availabilityChecks": [
                {
                  "type": "UserHasRole",
                  "role": "expert-imageslider"
                }
              ]
            }
          },
          "label": {
            "title": "Label",
            "type": "string"
          },
          "caption": {
            "title": "Bildlegende",
            "type": "string"
          },
          "credit": {
            "type": "object",
            "title": "Bildcredit",
            "properties": {
              "text": {
                "title": "Credit",
                "type": "string"
              },
              "link": {
                "Q:type": "link",
                "title": "Link",
                "type": "object",
                "properties": {
                  "url": {
                    "title": "Link",
                    "type": "string",
                    "Q:options": {
                      "placeholder": "Direktlink zum Fotografen, http://..."
                    }
                  },
                  "isValid": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "required": ["file", "label"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "properties": {
        "startImage": {
          "title": "Startbild",
          "type": "number",
          "Q:options": {
            "dynamicEnum": {
              "type": "ToolEndpoint",
              "withData": true,
              "endpoint": "dynamic-enum/startImage"
            }
          }
        }
      }
    }
  },
  "required": ["title", "images"]
}
