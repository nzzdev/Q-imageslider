{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Bildslider",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "images": {
      "title": "Bilder",
      "type": "array",
      "items": {
        "title": "Bild",
        "type": "object",
        "minItems": 2,
        "properties": {
          "url": {
            "type": "string",
            "Q:type": "files",
            "Q:options": {
              "maxFiles": 1,
              "acceptedFiles": "image/*"
            }
          },
          "label": {
            "title": "Label",
            "type": "string"
          },
          "caption": {
            "title": "Legende",
            "type": "string"
          },
          "credit": {
            "title": "Credit",
            "type": "string"
          }
        },
        "required": [
          "url",
          "label",
          "caption",
          "credit"
        ]
      }
    }
  },
  "required": [
    "title",
    "images"
  ]
}
