{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Bildslider",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "images": {
      "title": "Bilder",
      "type": "array",
      "items": {
        "title": "Bild",
        "type": "object",
        "minItems": 2,
        "properties": {
          "url": {
            "type": "string",
            "Q:type": "files",
            "Q:options": {
              "maxFiles": 1,
              "acceptedFiles": "image/*"
            }
          },
          "label": {
            "title": "Label",
            "type": "string"
          },
          "caption": {
            "title": "Legende",
            "type": "string"
          },
          "credit": {
            "title": "Credit",
            "type": "string"
          }
        },
        "required": [
          "url",
          "label",
          "caption",
          "credit"
        ]
      }
    },
    "sources": {
      "title": "Quellen",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    }
  },
  "required": [
    "title",
    "images"
  ]
}
